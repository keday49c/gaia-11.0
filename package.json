{
  "name": "gaia-10",
  "version": "1.0.0",
  "description": "Gaia 10.0 - Plataforma de Marketing Automation",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "build": "npm run build --workspace=client",
    "preview": "npm run preview --workspace=client",
    "server:dev": "npm run dev --workspace=server",
    "server:build": "npm run build --workspace=server",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "format": "prettier --write ."
  },
  "workspaces": [
    "client",
    "server"
  ],
  "devDependencies": {
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "tw-animate-css": "^1.4.0"
  }
}
